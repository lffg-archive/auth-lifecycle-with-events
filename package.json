{
  "private": true,
  "name": "typescript-boilerplate",
  "version": "0.0.0",
  "author": "Luiz Felipe Gon√ßalves <https://luizfelipe.dev>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .jsx,.js,.ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "check:ts": "tsc --noEmit --skipLibCheck",
    "check:all": "yarn lint && yarn check:ts",
    "build": "del dist && tsc",
    "dev": "nodemon --ext js,jsx,ts,tsx --exec ts-node src/index",
    "prod": "yarn build && NODE_ENV=production node dist/index"
  },
  "dependencies": {
    "@poppinss/events": "^1.0.0",
    "@types/uuid": "^3.4.5",
    "express": "^4.17.3",
    "uuid": "^3.3.2",
    "waait": "^1.0.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "del-cli": "^2.0.0",
    "eslint": "5.x",
    "eslint-config-lffg": "latest",
    "nodemon": "^1.19.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  }
}
